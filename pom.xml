<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.2.1.RELEASE</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>cn.ibestcode.easiness</groupId>
  <artifactId>easiness-framework</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <modules>
    <module>easiness-core</module>
    <module>easiness-utils</module>
    <module>easiness-starter-validation</module>
    <module>easiness-starter-exception</module>
  </modules>

  <dependencyManagement>
    <dependencies>

      <!-- easiness-framework 模块 -->
      <dependency>
        <groupId>cn.ibestcode.easiness</groupId>
        <artifactId>easiness-core</artifactId>
        <version>${easiness.version}</version>
      </dependency>
      <dependency>
        <groupId>cn.ibestcode.easiness</groupId>
        <artifactId>easiness-starter-validation</artifactId>
        <version>${easiness.version}</version>
      </dependency>
      <dependency>
        <groupId>cn.ibestcode.easiness</groupId>
        <artifactId>easiness-utils</artifactId>
        <version>${easiness.version}</version>
      </dependency>
      <dependency>
        <groupId>cn.ibestcode.easiness</groupId>
        <artifactId>easiness-starter-exception</artifactId>
        <version>${easiness.version}</version>
      </dependency>

      <!-- JSON API 文档 -->
      <dependency>
        <groupId>io.springfox</groupId>
        <artifactId>springfox-swagger2</artifactId>
        <version>${springfox.swagger2.version}</version>
      </dependency>
      <dependency>
        <groupId>io.springfox</groupId>
        <artifactId>springfox-swagger-ui</artifactId>
        <version>${springfox.swagger2.version}</version>
      </dependency>

      <!-- 身份认证 与 权限控制 -->
      <dependency>
        <groupId>org.apache.shiro</groupId>
        <artifactId>shiro-spring</artifactId>
        <version>${shiro.version}</version>
      </dependency>

      <!-- Interceptor API -->
      <dependency>
        <groupId>javax.interceptor</groupId>
        <artifactId>javax.interceptor-api</artifactId>
        <version>${javax.interceptor.version}</version>
      </dependency>

      <!-- redis 支持 -->
      <dependency>
        <groupId>org.redisson</groupId>
        <artifactId>redisson-spring-boot-starter</artifactId>
        <version>${redisson.version}</version>
      </dependency>

      <!-- jackson XML 解析 -->
      <dependency>
        <groupId>com.fasterxml.jackson.dataformat</groupId>
        <artifactId>jackson-dataformat-xml</artifactId>
        <version>${jackson.version}</version>
      </dependency>

      <!-- google Java项目广泛依赖 的核心库 -->
      <dependency>
        <groupId>com.google.guava</groupId>
        <artifactId>guava</artifactId>
        <version>${guava.version}</version>
      </dependency>

      <!-- MyBatis 支持 -->
      <dependency>
        <groupId>org.mybatis.spring.boot</groupId>
        <artifactId>mybatis-spring-boot-starter</artifactId>
        <version>2.1.1</version>
      </dependency>


    </dependencies>
  </dependencyManagement>


  <build>
    <plugins>
      <!--打包源码-->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!--打包文档注释-->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <encoding>UTF-8</encoding>
          <charset>UTF-8</charset>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!--gpg加密-->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>sign-artifacts</id>
            <phase>verify</phase>
            <goals>
              <goal>sign</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <easiness.version>1.0.0</easiness.version>
    <springfox.swagger2.version>2.9.2</springfox.swagger2.version>
    <shiro.version>1.4.1</shiro.version>
    <jackson.version>2.9.8</jackson.version>
    <javax.interceptor.version>1.2.2</javax.interceptor.version>
    <redisson.version>3.11.5</redisson.version>
    <guava.version>28.1-jre</guava.version>
    <java.version>1.8</java.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
  </properties>
</project>
